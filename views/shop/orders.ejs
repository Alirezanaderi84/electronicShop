<%- include('../includes/head.ejs') %>
    <%- include('../includes/heading.ejs') %>
        <main>
            <% if(refId){ %>
                <div  class="alert alert-success text-center" role="alert">
                    <h4 > سفازش با موفقیت ثبت شد
                       ,  شماره تراکنش:<%=refId %>
                    </h4>
                </div>


                <% } %>
            <% if(orders.length>0) { %>
                <ul style="list-style-type: none; ">
                    <% orders.forEach(order=>{ %>
                        <li style="box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                                           border: none;
                                             border-radius: 12px;;">
                            <h5 class="fw text-center">سفارش :<%= order._id %>
                                <a style="margin-right: 10px;" href="/invoices/<%=order._id  %>">دریافت گزارش</a>
                            </h5>
                            <ul class="cart__item-list">
                                <% order.products.forEach(p=>{ %>
                                    <li class="cart__item">
                                        <h1 class="fw">
                                            <%= p.product.title %>
                                        </h1>
                                        <h2 class="text-primary">
                                            تعداد: <%= p.quantity %> 
                                        </h2>
                                        
                                    </li>
                                    <% }) %>
                            </ul>
                        </li>

                        <% }) %>
                </ul>
                <% }else { %>
                    <h1 style="font-size: x-large; padding-right: 10px;">سفازشی ثیت نشده است !</h1>
                    <% } %>


        </main>
        <%- include('../includes/end.ejs') %>