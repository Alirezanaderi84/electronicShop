<%- include('../includes/head.ejs') %>
  <%- include('../includes/heading.ejs') %>
    <main dir="rtl">
      <div class="container">
        <form action="/admin/<% if(editing){ %>editProducts<% }else{ %>addProduct<% } %>" method="post">
          <div class="form-group">
             <% if(hasErorr) {%>
              <% if(errorMessage[0]){ %>
                            <div class="alert alert-danger text-center" role="alert">
                                <%= errorMessage %>
                            </div>
                            <% } %>
            <% } %>
            <label for="title">عنوان</label>
            <input type="text" class="form-control <%= validationError.find(e => e.path ==='title' ) ? 'border border-danger' : '' %>" id="title" name="title" placeholder="نام محصول را وارد کنید"
              value="<% if(editing || hasErorr){  %><%= product.title %><% } %>" />
          </div>
          <div class="form-group">
            <label for="title">قیمت</label>
            <input type="number" style="direction: rtl;" ; class="form-control <%= validationError.find(e => e.path ==='price' ) ? 'border border-danger' : '' %>" id="price" name="price"
              placeholder="قیمت محصول را وارد کنید" value="<% if(editing || hasErorr){  %><%= product.price %><% } %>" />

          </div>
          <div class="form-group">
            <label for="title">آدرس عکس</label>
            <input type="text" class="form-control <%= validationError.find(e => e.path ==='imageUrl' ) ? 'border border-danger' : '' %>" id="imageUrl" name="imageUrl" placeholder="عکس محصول را وارد کنید"
              value="<% if(editing || hasErorr){  %><%= product.imageUrl %><% } %>" />
          </div>
          <div class="form-group">
            <label for="title">توضیحات</label>
            <textarea class="form-control <%= validationError.find(e => e.path ==='description' ) ? 'border border-danger' : '' %>" name="description" cols="30"
              rows="10"><% if(editing || hasErorr){ %><%=  product.description %><% } %></textarea>
          </div>
          <% if(editing){ %><input type="hidden" value="<%= product._id %>" name= "productId"> <% } %>
          <button type="submit" class="btn btn-primary">
            <% if(editing){ %>ویرایش محصول <% }else{ %>ثبت <% } %>
          </button>
        </form>
      </div>
    </main>

    <%- include('../includes/end.ejs') %>