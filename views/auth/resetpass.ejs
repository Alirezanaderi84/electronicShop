<%- include('../includes/head.ejs') %>
    <section class="vh-100" style="background-color: #508bfc">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem">
                          <% if(errorMessage[0]){ %>
                            <div class="alert alert-danger text-center" role="alert">
                                <%= errorMessage[0] %>
                            </div>
                            <% } %>
                                <div class="card-body p-5 text-center">
                                    <h3 class="mb-5">بازیابی رمز عبور</h3>

                                    <form action="/resetPass" method="post">

                                        <div class="form-outline mb-4">
                                            <input type="email" name="email" id="typeEmailX-2"
                                                class="form-control form-control-lg" style="direction: rtl;"
                                                placeholder="ایمیل خود را وارد کنید">
                                        </div>
                                        <button class="btn btn-primary btn-lg btn-block w-100" type="submit">
                                            ارسال رمز عبور </button>

                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../includes/end.ejs') %>