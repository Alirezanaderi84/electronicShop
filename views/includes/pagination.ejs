<div>
    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <ul class="pagination">

                    <% if (hasPreviousPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= PreviousPage %>">&laquo;</a>
                        </li>
                        <% } %>

                            <li class="page-item <%= currentPage === 1 ? 'active' : '' %>">
                                <a class="page-link" href="?page=1">1</a>
                            </li>

                            <!-- اگر فاصله داشت سه نقطه اول -->
                            <% if (currentPage> 3) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                                <% } %>

                                    <!-- صفحه قبل از فعلی -->
                                    <% if (currentPage - 1> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">
                                                <%= currentPage - 1 %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <!-- صفحه فعلی -->
                                            <% if (currentPage !==1 && currentPage !==lastPage) { %>
                                                <li class="page-item active">
                                                    <a class="page-link" href="#">
                                                        <%= currentPage %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <!-- صفحه بعد از فعلی -->
                                                    <% if (currentPage + 1 < lastPage) { %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">
                                                                <%= currentPage + 1 %>
                                                            </a>
                                                        </li>
                                                        <% } %>

                                                            <!-- اگر فاصله داشت سه نقطه آخر -->
                                                            <% if (currentPage < lastPage - 2) { %>
                                                                <li class="page-item disabled">
                                                                    <span class="page-link">...</span>
                                                                </li>
                                                                <% } %>

                                                                    <!-- صفحه آخر -->
                                                                    <% if (lastPage> 1) { %>
                                                                        <li
                                                                            class="page-item <%= currentPage === lastPage ? 'active' : '' %>">
                                                                            <a class="page-link"
                                                                                href="?page=<%= lastPage %>">
                                                                                <%= lastPage %>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>

                                                                            <% if (hasNextPage) { %>
                                                                                <li class="page-item">
                                                                                    <a class="page-link"
                                                                                        href="?page=<%= nextPage %>">&raquo;</a>
                                                                                </li>
                                                                                <% } %>

                </ul>

            </ul>
        </nav>
    </div>
</div>